package com.hi;

import java.util.ArrayList;
import java.util.Scanner;

public class Grade_program {
	//콜렉션 프레임워크로 성적관리프로그램 만들기
	public static void main(String[] args) {
		Scanner sc=new Scanner(System.in);
		ArrayList<String> list=new ArrayList<>();
		String input;
		System.out.println("성적관리프로그램");
		
		while(true){
			System.out.print("1.입력 2.출력 3.수정 4.삭제 0.종료 >");
			input=sc.nextLine();
			if(input.equals("0")){ //종료
				break;
			}else if(input.equals("1")){ //입력
				
				System.out.print("학번 >");
				input=sc.nextLine();
				System.out.print("국어 >");
				input=sc.nextLine();
				System.out.print("영어 >");
				input=sc.nextLine();
				System.out.print("수학 >");
				input=sc.nextLine();
				
			}else if(input.equals("2")){ //출력
				
			}else if(input.equals("3")){ //수정
				
			}else if(input.equals("4")){ //삭제
				
			}
			System.out.println("ddkdkgk");
		}
		System.out.println("program closed.");
	}

}
